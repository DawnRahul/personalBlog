
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.postTitle%></h1>
    <p style="display:inline">
    <%=post.postBody.substring(0, 100) + " ..."%>

      <form style="display:inline"  action="/posts/<%=post._id%>/readmore" method="post">
        <a href="/posts/<%=post._id%>" name="readMore" value="<%=post._id%>" >Read more </a>
      </form> 
    
    </p>


    <% }) %>


<%- include("partials/footer"); -%>
